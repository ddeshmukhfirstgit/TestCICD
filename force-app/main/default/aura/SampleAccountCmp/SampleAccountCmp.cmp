<aura:component controller="MyContactListController" implements="flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
		<aura:handler name="init" action="{!c.myAction}" value="{!this}" />
		<aura:attribute name="currentAccount" type="Account" />
    
    
<div class="slds-form slds-form_stacked">
        <div class="slds-form-element">
            <label class="slds-form-element__label" for="recordName">Name: </label>
            <div class="slds-form-element__control">
              <ui:outputText class="slds-input" aura:id="recordName"
                value="{!v.currentAccount.Name}" />
            </div>
        </div>
        <div class="slds-form-element">
            <label class="slds-form-element__label" for="recordName">Phone: </label>
            <div class="slds-form-element__control">
              <ui:outputText class="slds-input" aura:id="recordName"
                value="{!v.currentAccount.Phone}" />
            </div>
        </div>
        <div class="slds-form-element">
            <label class="slds-form-element__label" for="recordName">Rating: </label>
            <div class="slds-form-element__control">
              <ui:outputText class="slds-input" aura:id="recordName"
                value="{!v.currentAccount.Rating}" />
            </div>
        </div>
        <div class="slds-form-element">
            <label class="slds-form-element__label" for="recordName">Website: </label>
            <div class="slds-form-element__control">
              <ui:outputText class="slds-input" aura:id="recordName"
                value="{!v.currentAccount.Website}" />
            </div>
        </div>
        <div class="slds-form-element">
            <label class="slds-form-element__label" for="recordName">Type: </label>
            <div class="slds-form-element__control">
              <ui:outputText class="slds-input" aura:id="recordName"
                value="{!v.currentAccount.Type}" />
            </div>
        </div>
    </div>
</aura:component>